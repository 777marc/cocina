generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "sqlite"
  url      = "file:./app.db"
}

model User {
  id       Int      @id @default(autoincrement())
  email    String   @unique
  password String
  name     String?
  isAdmin  Boolean  @default(false)
  recipes  Recipe[]
}

model Recipe {
  id           Int      @id @default(autoincrement())
  title        String
  description  String?
  ingredients  String
  instructions String
  createdAt    DateTime @default(now())
  authorId     Int
  author       User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
}
